<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tasksmanager.v2">

    <uses-feature android:name="android.hardware.camera" />

    <application

        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"

        android:icon="@mipmap/ic_launcher"
        android:backupInForeground="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="Tasks Manager"

        android:supportsRtl="true"
        android:theme="@style/Theme.TasksManager"

        tools:targetApi="33">

        <activity
            android:name=".BackgroundPage"
            android:exported="false"
            android:theme="@style/HiddenTitleTheme"
            android:parentActivityName=".MainActivity"

            />
        <activity
            android:name=".DailyTasksInsert"
            android:exported="false"
            android:theme="@style/HiddenTitleTheme"

            />
        <activity
            android:name=".DailyTasksPage"
            android:exported="false"
            android:theme="@style/HiddenTitleTheme"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".MonthlyTasksPage"
            android:exported="false"
            android:theme="@style/HiddenTitleTheme"
            android:parentActivityName=".MainActivity"

            />
        <activity
            android:name=".CalendarEventInsert"
            android:exported="false"
            android:theme="@style/HiddenTitleTheme"
            android:parentActivityName=".Calendar"

            />
        <activity
            android:name=".Calendar"
            android:exported="false"
            android:theme="@style/HiddenTitleTheme"
            android:parentActivityName=".MainActivity"

            />
        <activity
            android:name=".MainActivity"
            android:exported="true"

            tools:ignore="Instantiatable">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:grantUriPermissions="true"
            android:exported="false">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>
        <receiver android:name=".AlarmManagerReminderDaily" />
        <receiver android:name=".AlarmManagerReminderMonthly" />
    </application>

</manifest>